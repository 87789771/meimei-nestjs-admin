{
  "compilerOptions": {
    "baseUrl": "./",
    "jsx": "preserve",
    "paths": {
      "@/*": ["src/*"]
    },
    "allowJs": true,
    "checkJs": true,
    "module": "ESNext",
    "target": "ESNext",
    "moduleResolution": "node",
    "resolveJsonModule": true,
    "typeRoots": ["./node_modules/@types"]
  },
  "types": ["element-plus/global"],
  "exclude": ["node_modules", "dist"],
  "include": [
    "src/**/*.ts",
    "src/**/*.tsx",
    "src/**/*.js",
    "src/**/*.jsx",
    "src/**/*.vue",
    "src/**/*.d.ts",
    "vue-shim.d.ts",
    "vite-env.d.ts"
  ]
}
